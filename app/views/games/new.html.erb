<h1>Welcome to the new game</h1>

<div id="letters">
  <% @letters.each do |letter| %>
  <div id="letter"><%=letter%></div>
  <% end %>
</div>
<p>What is the longest word you can find?</p>

<form action="score" id="form" method="POST">
  <input type="text" name="word" id="input-field">
  <input type="submit" value="Play" id="button">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>


